<p id="notice"><%= notice %></p>
<p>
	<%= link_to 'Edit', edit_product_path(@product), :class => "btn btn-secondary"  %>
	<%= link_to 'Back', products_path, :class => "btn btn-secondary"  %>
</p>
<p>
	<% if !@product['image'].blank? %>
		<%= image_tag @product.image_url %>
	<% end %>
	<h6>
		<%= @product.description %>
	</h6>
	Price: <%= @product.price %>
</p>